<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ultimatecalculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/processEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:maxLines="2"
            android:textAlignment="textEnd"
            android:textSize="30sp"
            tools:text="2+5" />

        <TextView
            android:id="@+id/liveResultEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:maxLength="9"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            tools:text="7" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewMainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            app:cardBackgroundColor="#F6F6F6"
            app:cardCornerRadius="24dp">

            <GridLayout
                android:id="@+id/buttonsMainContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="7"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:paddingTop="12dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_Rad"
                    android:layout_width="62dp"
                    android:layout_height="42dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Rad"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/btnSquareRoot"
                    android:layout_width="62dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="12dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="√"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnAc"
                    android:layout_width="62dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="12dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="AC"
                        android:textColor="@color/myRed"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/btnBrackets"
                    android:layout_width="62dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="25dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="( )"
                        android:textColor="@color/myblue"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_prosent"
                    android:layout_width="62dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="12dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="%"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
