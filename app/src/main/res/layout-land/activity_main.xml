                    android:layout_width="62dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="25dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="2dp">

                    <TextView
